<form action="<%= url %>" method="post" name="edit">
<div class="postzoom">
	<p class="title"><input type="text" name="title" value="<%= post.title %>" /> (title)</p>
	<p class="meta"><input type="text" name="tags" value="<%= post.tags %>" /> (tags)</p>
	<p class="meta"><%= post.created_at %></p>
	<div class="entry">
		<textarea name="body"><%= post.body %></textarea> (body)
	</div>
	<div class="edit"><input type="submit" value="Save" /></div>
</div>
</form>
